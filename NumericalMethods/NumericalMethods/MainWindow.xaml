<Window x:Class="NumericalMethods.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NumericalMethods"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <Menu x:Name="menu" Height="32" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open file" Name="MenuItem_open_file" Click="MenuItem_open_file_Click"/>
                <MenuItem Header="Save to file" Name="MenuItem_save_to_file" Click="MenuItem_save_to_file_Click"/>
            </MenuItem>
            <MenuItem Header="Methods">
                <MenuItem Header="Gauss with main element" Name="MenuItem_gauss_with_main_element" IsCheckable="True" Click="MenuItem_gauss_with_main_element_Click"/>
                <MenuItem Header="Gauss-Seidel" Name="MenuItem_gauss_seidel" IsCheckable="True" Click="MenuItem_gauss_seidel_Click"/>
            </MenuItem>
            <MenuItem Header="Calculate" Name="MenuItem_calculate" IsEnabled="False" Click="MenuItem_calculate_Click"/>
            <MenuItem Header="Help" Name="MenuItem_help" Click="MenuItem_help_Click"/>
        </Menu>

        <DataGrid x:Name="dataGrid" Margin="10,54,10,10"/>        
    </Grid>
</Window>
